<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26.1sp"
                android:layout_marginTop="57dp"
                android:text="Receipt"
                android:layout_gravity="left"
                android:gravity="left"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginLeft="28dp"
                android:focusable="true"
                android:clickable="true"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="28dp"
                android:focusable="true"
                android:letterSpacing="0.15"
                android:lineSpacingExtra="3.1sp"
                android:textAllCaps="true"
                android:textSize="12.9sp"
                android:textStyle="normal"
                android:visibility="visible"
                android:text="Date" />


            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginLeft="29dp"
                android:letterSpacing="0.01"
                android:layout_marginTop="3dp"
                android:text="My Home Purchase"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="18dp"
                android:text="Time"
                android:letterSpacing="0.15"
                android:lineSpacingExtra="3.1sp"
                android:textAllCaps="true"
                android:textSize="12.9sp"
                android:textStyle="normal"
                android:visibility="visible"/>



            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginLeft="29dp"
                android:letterSpacing="0.01"
                android:layout_marginTop="3dp"
                android:text="NGN10,500.00"
                />
            <TextView
                android:layout_marginTop="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:layout_marginLeft="29dp"
                android:letterSpacing="0.15"
                android:lineSpacingExtra="3.1sp"
                android:textAllCaps="true"
                android:textSize="12.9sp"
                android:textStyle="normal"
                android:visibility="visible"


                />
            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginLeft="29dp"
                android:letterSpacing="0.01"
                android:layout_marginTop="3dp"
                android:text="Doubble 3"
                />


            <TextView
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type of Transaction"
                android:layout_marginLeft="29dp"
                android:letterSpacing="0.15"
                android:lineSpacingExtra="3.1sp"
                android:textAllCaps="true"
                android:textSize="12.9sp"
                android:textStyle="normal"
                android:visibility="visible"
                />


            <TextView
                android:id="@+id/transaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginLeft="29dp"
                android:letterSpacing="0.01"
                android:layout_marginTop="3dp"
                android:text="Future"
                />




            <TextView
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:layout_marginLeft="29dp"
                android:letterSpacing="0.15"
                android:lineSpacingExtra="3.1sp"
                android:textAllCaps="true"
                android:textSize="12.9sp"
                android:textStyle="normal"
                android:visibility="visible"
                />


            <TextView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginLeft="29dp"
                android:letterSpacing="0.01"
                android:layout_marginTop="3dp"
                android:text="June 11 2019"
                />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Amount"
                android:layout_marginLeft="29dp"
                android:letterSpacing="0.15"
                android:lineSpacingExtra="3.1sp"
                android:textAllCaps="true"
                android:textSize="12.9sp"
                android:textStyle="normal"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginLeft="29dp"
                android:letterSpacing="0.01"
                android:layout_marginTop="3dp"
                android:text="1012239877"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Ending Balance"
                android:layout_marginLeft="29dp"
                android:letterSpacing="0.15"
                android:lineSpacingExtra="3.1sp"
                android:textAllCaps="true"
                android:textSize="12.9sp"
                android:textStyle="normal"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/endingbalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginLeft="29dp"
                android:letterSpacing="0.01"
                android:layout_marginTop="3dp"
                android:text="Beneficiary Investment"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Available Balance"
                android:layout_marginLeft="29dp"
                android:letterSpacing="0.15"
                android:lineSpacingExtra="3.1sp"
                android:textAllCaps="true"
                android:textSize="12.9sp"
                android:textStyle="normal"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/availablebalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginLeft="29dp"
                android:letterSpacing="0.01"
                android:layout_marginTop="3dp"
                android:text="2011290121"
                />

            <Button
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="submit"
                android:layout_marginLeft="29dp"
                android:layout_marginRight="29dp"
                android:layout_marginTop="28dp"
                android:padding="7dp"
                android:layout_marginBottom="0dp"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textAllCaps="true"
                style="?android:attr/borderlessButtonStyle"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
